{{!
    @template mod_learningmap/formitem

    Template for the form item containing the editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    "sections":[
      {
         "name":"Section 0",
         "coursemodules":[
            {
               "id":"1039",
               "name":"Activity 1"
            },
            {
               "id":"1040",
               "name":"Activity 2"
            }
         ]
      },
      {
         "name":"Section 1",
         "coursemodules":[
            {
               "id":"1043",
               "name":"Activity 3"
            }
         ]
      }
    ],
    "help":"This is the help text",
    "completiondisabled":"false",
    "features" : [
            {
                "name": "showtext",
                "title": "Show activity names",
                "text": "This option shows the names of the activities as a text besides the places. The text can be moved and is automatically updated when the name changes.",
                "alt": "Help"
            },
            {
                "name": "slicemode",
                "title": "Reveal map with places",
                "text": "This option subsequently reveals the map when new places become reachable. The hidden parts of the map are covered with fog. When all places become reachable, the whole map is visible.",
                "alt": "Help"
            }
        ]
    }
}}
{{#completiondisabled}}<div class="alert alert-danger row">{{#str}} completiondisabled, learningmap {{/str}}</div>{{/completiondisabled}}
<div class="mb-3 row fitem" id="mod_learningmap_editor">
    <div class="col-md-3 col-form-label d-flex pb-0 pe-md-0">
        <label class="d-inline word-break">{{#str}} learningmap, learningmap {{/str}}</label>
        <div class="form-label-addon d-flex align-items-center align-self-start">{{{ help }}}</div>
    </div>
    <div class="col-md-9 d-flex flex-wrap align-items-start felement">
        <div class="learningmap-menubar container border-start border-top border-end border-dark">
            <div class="row m-1">
                <div class="col">
                    <label for="learningmap-color-place">{{#str}} places, learningmap {{/str}}</label>
                </div>
                <div class="col border-end border-dark">
                    <input type="color" id="learningmap-color-place">
                </div>
                <div class="col">
                    <label for="learningmap-color-visited">{{#str}} visited, learningmap {{/str}}</label>
                </div>
                <div class="col border-end border-dark">
                    <input type="color" id="learningmap-color-visited">
                </div>
                <div class="col">
                    <label for="learningmap-color-stroke">{{#str}} paths, learningmap {{/str}}</label>
                </div>
                <div class="col border-end border-dark">
                    <input type="color" id="learningmap-color-stroke">
                </div>
                <div class="col-sm text-center">
                    <i class="fa fa-cog" id="learningmap-advanced-settings-icon"></i>
                </div>
            </div>
        </div>
        <div class="learningmap-editor-main">
            {{> mod_learningmap/activityselector }}
            {{> mod_learningmap/advancedsettings }}
            <div class="learningmap-mapcontainer learningmap-scaling-svg-container" id="learningmap-editor-map">
            </div>
        </div>
    </div>
</div>