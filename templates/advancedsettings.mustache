{{!
    @template mod_learningmap/advancedsettings

    Template for displaying the advanced settings in the editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none


    Example context (json):
    {
    }
}}
<div id="learningmap-advanced-settings" class="card border border-light" hidden>
    <div class="card-body">
        <div class="card-title alert alert-dark">{{#str}} advancedsettings, learningmap {{/str}}
            <button type="button" class="ml-2 mb-1 close" aria-label="Close" id="learningmap-advanced-settings-close">
                <span>&times;</span>
             </button>
        </div>
        <div class="card-text">
            <div class="row border-top border-bottom border-light">
                <div class="col">
                    <label for="learningmap-hidepaths">{{#str}} hidepaths, learningmap {{/str}}</label>
                </div>
                <div class="col-sm">
                    <input type="checkbox" id="learningmap-hidepaths"/>
                </div>
            </div>
            <div class="row border-bottom border-light">
                <div class="col">
                    <label for="learningmap-usecheckmark">{{#str}} usecheckmark, learningmap {{/str}}</label>
                </div>
                <div class="col-sm">
                    <input type="checkbox" id="learningmap-usecheckmark"/>
                </div>
            </div>
            <div class="row border-bottom border-light">
                <div class="col">
                    <label for="learningmap-pulse">{{#str}} pulse, learningmap {{/str}}</label>
                </div>
                <div class="col-sm">
                    <input type="checkbox" id="learningmap-pulse"/>
                </div>
            </div>
            <div class="row border-bottom border-light">
                <div class="col">
                    <label for="learningmap-hover">{{#str}} hover, learningmap {{/str}}</label>
                </div>
                <div class="col-sm">
                    <input type="checkbox" id="learningmap-hover"/>
                </div>
            </div>
        </div>
    </div>
</div>