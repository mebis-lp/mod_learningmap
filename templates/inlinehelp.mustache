{{!
    @template mod_learningmap/inlinehelp

    Template for displaying the inline help buttons.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "usecaselink": "https://www.mebis.bayern.de/infoportal/support-bereich/lernplattform-support-bereich/lernlandkarten/"
    }
}}
<div class="form-group row fitem" id="mod_learningmap_inlinehelp">
    <div class="col-md-3"></div>
    <div class="col-md-9">
        <a class="btn btn-primary" data-container="body" data-toggle="popover" data-placement="right" data-content="<div class=&quot;no-overflow&quot;>{{#str}} intro_help, learningmap{{/str}}</div> " data-html="true" tabindex="0" data-trigger="focus">{{#str}} editorhelp, learningmap {{/str}}</a>
        {{#usecaselink}}<a href="{{ usecaselink }}" class="btn btn-primary" target="_blank" rel="noreferrer noopener">{{#str}} usecasehelp, learningmap {{/str}}</a>{{/usecaselink}}
    </div>
</div>