{{!
    @template mod_learningmap/activityselector

    Template for displaying the activity selector in the editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    "sections":[
        {
            "name":"Section 0",
            "coursemodules":[
                {
                "id":"1039",
                "name":"Activity 1",
                "completionenabled":"true"
                },
                {
                "id":"1040",
                "name":"Activity 2",
                "completionenabled":"false"
                }
            ]
        },
        {
            "name":"Section 1",
            "coursemodules":[
                {
                "id":"1043",
                "name":"Activity 3",
                "completionenabled":"true"
                }
            ]
        }
    ]
    }
}}
<div id="learningmap-activity-setting" class="card border-dark" hidden>
    <div class="card-body">
    <div class="card-title alert alert-dark">{{#str}} editplace, learningmap {{/str}}</div>
    <div class="card-text">{{#str}} activity, core {{/str}}
    <select id="learningmap-activity-selector">
    {{#sections}}
        <option disabled title="{{name}}">-- {{#shortentext}} 30, {{{name}}} {{/shortentext}} --</option>
        {{#coursemodules}}
        {{^completionenabled}}
        <option value="{{id}}" disabled class="learningmap-disabled-activity" title="{{#str}} nocompletionenabled, learningmap {{/str}}">{{#shortentext}} 30, {{{name}}} {{/shortentext}}</option>
        {{/completionenabled}}
        {{#completionenabled}}
        <option value="{{id}}" title="{{name}}">{{#shortentext}} 30, {{{name}}} {{/shortentext}}</option>
        {{/completionenabled}}
        {{/coursemodules}}
    {{/sections}}
    </select><br/>
    <input type="checkbox" id="learningmap-activity-starting"/> {{#str}} startingplace, learningmap {{/str}}<br/>
    <input type="checkbox" id="learningmap-activity-target"/> {{#str}} targetplace, learningmap {{/str}}
    </div>
</div>
</div>